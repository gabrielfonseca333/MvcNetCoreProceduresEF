@model List<Doctor>
@{
    List<string> especialidades = ViewData["ESPECIALIDADES"] as List<string>;
}


    <h1>Doctores</h1>

    <form method="post">
        <select name="especialidad">
            @foreach (String especialidad in especialidades)
            {
                <option value="@especialidad">@especialidad</option>
            }
        </select>
        <input type="text" name="incremento" placeholder="Introduce aumento"/>
        <button class="btn btn-outline-primary">
            Aumentar salario
        </button>
    </form>

    <table class="table">
        <thead>
            <tr>
                <th>Apellido</th>
                <th>Especialidad</th>
                <th>Salario</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Doctor doctor in Model)
            {
                <tr>
                    <td>@doctor.Apellido</td>
                    <td>@doctor.Especialidad</td>
                    <td>@doctor.Salario</td>
                </tr>
            }
        </tbody>
    </table>

